<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <bean id="pool1" name="p1, p2" class="com.dmdev.database.pool.ConnectionPool" scope="singleton"
        init-method="init"
        destroy-method="destroy">
        <constructor-arg index="0" type="java.lang.String" value="postgres" />
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg index="2" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg index="3" type="java.util.Map">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </property>

    </bean>

    <bean id="userRepository" class="com.dmdev.database.repository.UserRepository">
        <constructor-arg ref="pool1"/>
    </bean>

    <bean id="companyRepository" class="com.dmdev.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>

<!--    <bean id="pool2" name="p3" class="com.dmdev.database.pool.ConnectionPool"/>-->
</beans>